<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:RedFocus.Converters"
                    xmlns:local="clr-namespace:RedFocus.Controls"
                    >
    <Color x:Key="PrimaryBackgroundColor">#1E3A5F</Color>
    <Color x:Key="PanelBackgroundColor">#3A4151</Color>
    <Color x:Key="AccentColor">White</Color>
    <Color x:Key="StaticTextColor">#6996F5</Color>
    <Color x:Key="TitleColor">#05E589</Color>
    <Color x:Key="TrackColor">#1D252C</Color>
    <Color x:Key="FocusProgressColor">#E17D8C</Color>
    <Color x:Key="ShortBreakProgressColor">#32CDD7</Color>
    <Color x:Key="LongBreakProgressColor">#6695E5</Color>
    <Color x:Key="RoundsProgressColor">#708BA0</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="StaticTextBrush" Color="{StaticResource StaticTextColor}"/>
    <SolidColorBrush x:Key="TitleBrush" Color="{StaticResource TitleColor}"/>
    <SolidColorBrush x:Key="TrackBrush" Color="{StaticResource TrackColor}"/>
    <SolidColorBrush x:Key="FocusProgressBrush" Color="{StaticResource FocusProgressColor}"/>
    <SolidColorBrush x:Key="ShortBreakProgressBrush" Color="{StaticResource ShortBreakProgressColor}"/>
    <SolidColorBrush x:Key="LongBreakProgressBrush" Color="{StaticResource LongBreakProgressColor}"/>
    <SolidColorBrush x:Key="RoundsProgressBrush" Color="{StaticResource RoundsProgressColor}"/>
</ResourceDictionary>
