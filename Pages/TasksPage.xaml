<UserControl x:Class="RedFocus.Pages.TasksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RedFocus.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="340">
    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Tasks" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Task management coming soon..." 
                       FontSize="14" 
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       HorizontalAlignment="Center"
                       Opacity="0.7"/>
        </StackPanel>
    </Grid>
</UserControl>
