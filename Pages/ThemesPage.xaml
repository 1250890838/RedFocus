<UserControl x:Class="RedFocus.Pages.ThemesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:RedFocus.Pages"
           mc:Ignorable="d" 
  d:DesignHeight="400" d:DesignWidth="340">
    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
		<StackPanel Margin="20">
			<TextBlock Text="Options"
    FontSize="24"
        FontWeight="Bold"
          Foreground="{DynamicResource PrimaryTextBrush}"
    HorizontalAlignment="Center"
        Margin="0,0,0,30"/>

			<TextBlock Text="Theme"
			  FontSize="16"
				   Foreground="{DynamicResource PrimaryTextBrush}"
					  Margin="0,0,0,10"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
				<Button Content="Dark" Click="DarkTheme_Click" Width="80" Margin="5"/>
				<Button Content="Light" Click="LightTheme_Click" Width="80" Margin="5"/>
				<Button Content="Blue" Click="BlueTheme_Click" Width="80" Margin="5"/>
			</StackPanel>

			<TextBlock Text="More options coming soon..."
				FontSize="14"
		Foreground="{DynamicResource PrimaryTextBrush}"
					HorizontalAlignment="Center"
				 Opacity="0.7"
		 Margin="0,20,0,0"/>
		</StackPanel>
    </Grid>
</UserControl>
