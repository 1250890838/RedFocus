<UserControl x:Class="RedFocus.Pages.TimerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RedFocus.Pages"
             xmlns:controls="clr-namespace:RedFocus.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="340">
    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <controls:CountdownCircle x:Name="CountdownTimer"
                                    Width="200"
                                    Height="200"
                                    TotalSeconds="300"
                                    CircleColor="{DynamicResource AccentBrush}"
                                    TextColor="{DynamicResource PrimaryTextBrush}"
                                    CircleThickness="10"
                                    ShowText="True"
                                    Margin="20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Start" Click="StartButton_Click" Width="60" Margin="5"/>
                <Button Content="Pause" Click="PauseButton_Click" Width="60" Margin="5"/>
                <Button Content="Resume" Click="ResumeButton_Click" Width="60" Margin="5"/>
                <Button Content="Reset" Click="ResetButton_Click" Width="60" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
