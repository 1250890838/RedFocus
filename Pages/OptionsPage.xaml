<UserControl x:Class="RedFocus.Pages.OptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:local="clr-namespace:RedFocus.Pages"
xmlns:ext="clr-namespace:RedFocus.Extensions"
   xmlns:vm="clr-namespace:RedFocus.ViewModel"
     mc:Ignorable="d" 
       d:DesignHeight="400" d:DesignWidth="340">
    <UserControl.DataContext>
   <vm:OptionsViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
